    <resources>

        <!--Components-->

        <style name="Widget.EventCalendar.NavigationView" parent="Widget.MaterialComponents.NavigationView">
            <!--Remove any scrim insets applied by NavigationView for system bars-->
            <!--Set the background color of NavigationView-->
            <item name="elevation">0dp</item>
            <item name="itemTextAppearance">?attr/textAppearanceBody2</item>
            <item name="itemTextColor">@color/color_on_surface_emphasis_medium</item>
            <item name="itemIconTint">@color/color_on_surface_emphasis_medium</item>
        </style>


    <style name="TextInputEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_margin">@dimen/text_view_margin</item>
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:imeOptions">actionDone</item>
    </style>
    <style name="FilledBoxInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_margin">@dimen/item_block_margin</item>
        <item name="boxBackgroundColor">@color/reply_blue_50</item>
        <item name="hintTextColor">@color/reply_blue_600</item>
        <item name="android:textColorHint">@color/reply_blue_600</item>
        <item name="boxStrokeColor">@color/reply_blue_600</item>
        <item name="iconTint">@color/reply_blue_600</item>
        <item name="shapeAppearance">?attr/shapeAppearanceMediumComponent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="bottomSheet" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="android:windowIsFloating">false</item>
        <item name="expanded">true</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="contentPaddingBottom">@dimen/activity_vertical_margin</item>
    </style>


</resources>
